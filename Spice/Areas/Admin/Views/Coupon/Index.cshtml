@model IEnumerable<Coupon>

    @{
        ViewData["Title"] = "Index";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <br /><br />
    <div class="border backgroundWhite">
        <div class="row">
            <div class="col-6">
                <h2 class="text-info"> Coupon List</h2>
            </div>
            <div class="col-6 text-right">
                <partial name="_CreateButtonPartial" />
            </div>
        </div>
        <br />
        <div>
            @if (Model.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            @Html.DisplayNameFor(m => m.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.Discount)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.MinimumAmount)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.IsActive)
                        </th>
                        <th></th>
                        <th></th>
                    </tr>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Discount)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.MinimumAmount)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.IsActive)
                        </td>
                        @* 
                        <td>
                            <partial name="_TableButtonPartial" model="item.Id" />
                        </td>
                        *@
                        <td style="width:150px">
                            <div class="btn-group" role="group">
                                <a class="btn btn-primary text-white" asp-action="Edit" asp-route-Id="@item.Id">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a class="btn btn-success text-white" asp-action="Details" asp-route-Id="@item.Id">
                                    <i class="fas fa-list-alt"></i>
                                </a>
                                <a class="btn btn-danger text-white" asp-action="Delete" asp-route-Id="@item.Id">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </div>
                        </td>

                       
                    </tr>
                    }
                </table>
            }
            else
            {
                <p>No coupons exists...</p>
            }
        </div>
    </div>

