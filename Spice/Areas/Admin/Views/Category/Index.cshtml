@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br/><br/>
     <div class="boder backgroundWhite">
         <div class="row">
             <div class="col-6">
                 <h2 class="text-info">
                     Category List
                 </h2>
             </div>
             <div class="col-6 text-right">
                 <partial name="_CreateButtonPartial" />
             </div>
         </div>
         <div>
             @if (Model.Count() > 0)
             {
                 <table class="table table-striped border">
                     <tr class="table table-secondary">
                         <th>
                             @Html.DisplayNameFor(m => m.Name)
                         </th>
                         <th> </th>
                         <th></th>
                     </tr>  
                     @foreach (var item in Model)
                     {
                     <tr>
                         <td>
                             @Html.DisplayFor(m => item.Name)
                         </td>
                         <td></td>
                         <td style="width:150px">
                             <div class="btn-group" role="group">
                                 <a class="btn btn-primary text-white" asp-action="Edit" asp-route-Id="@item.Id">
                                     <i class="fas fa-edit"></i>
                                 </a>
                                 <a class="btn btn-success text-white" asp-action="Details" asp-route-Id="@item.Id">
                                     <i class="fas fa-list-alt"></i>
                                 </a>
                                 <a class="btn btn-danger text-white" asp-action="Delete" asp-route-Id="@item.Id">
                                     <i class="fas fa-trash-alt"></i>
                                 </a>
                             </div>
                         </td>

                         
                     </tr>
                     }
                 </table>
             }
             else
             {
                 <p><b> No Category Exist..</b></p>
             }
         </div>
     </div>